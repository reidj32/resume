@model Resume.Models.ResumeModel

@section navbar {
   @Html.Partial("_Navbar", Model)
}

<h1>
   <i class="fas fa-graduation-cap"></i> @Model.Education.Title
</h1>

<div class="row">
   <div class="col-12">
      <h3>@Model.Education.Undergraduate.Title</h3>
      @foreach (var program in Model.Education.Undergraduate.Programs)
      {
         <div class="card">
            <div class="card-body">
               <h5 class="card-title">@program.Title</h5>
               <h6 class="card-subtitle text-muted">@program.Contact.Address.City, @program.Contact.Address.State</h6>
               <dl class="row mt-2">
                  <dt class="col-2">@program.Degree.Title</dt>
                  <dd class="col-10">@program.Degree.Value</dd>

                  <dt class="col-2">@program.Major.Title</dt>
                  <dd class="col-10">@program.Major.Value</dd>

                  <dt class="col-2">@program.Class.Title</dt>
                  <dd class="col-10">@program.Class.Value</dd>
               </dl>
            </div>
         </div>
      }
   </div>
</div>

<div class="row mt-3">
   <div class="col-12">
      <h3>@Model.Education.Pluralsight.Title</h3>
      <div class="card">
         <div class="list-group list-group-flush">
            @foreach (var course in Model.Education.Pluralsight.Courses)
            {
               <a href="@course.Link" target="_blank" class="list-group-item list-group-item-action">
                  <blockquote class="blockquote mb-0">
                     <p class="mb-0">@course.Title</p>
                     <footer class="blockquote-footer">@course.Author</footer>
                  </blockquote>
               </a>
            }
         </div>
      </div>
   </div>
</div>
