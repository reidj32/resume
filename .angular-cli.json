{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "resume"
  },
  "apps": [
    {
      "root": "src/angular/src",
      "outDir": "src/angular/dist",
      "assets": ["assets"],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "jpr",
      "styles": ["styles.scss"],
      "scripts": [],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./src/angular/src/protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/angular/src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/angular/src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/angular/e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./src/angular/karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {}
  }
}
